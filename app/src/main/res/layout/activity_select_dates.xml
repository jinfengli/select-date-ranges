<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <RelativeLayout
        android:id="@+id/rl_this_period"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/setting_item_selector"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="本期" />

        <TextView
            android:id="@+id/tv_this_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="9dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:hint="选择本期时间" />
    </RelativeLayout>

    <View
        android:id="@+id/dividing_line_1"
        style="@style/setting_item_middle_line"
        android:layout_below="@id/rl_this_period"
        android:layout_marginLeft="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_same_period"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/setting_item_selector"
        android:layout_below="@id/dividing_line_1"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="同期" />

        <TextView
            android:id="@+id/tv_same_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="9dp"
            android:gravity="right"
            android:hint="选择同期时间" />
    </RelativeLayout>

    <View
        android:id="@+id/dividing_line_2"
        style="@style/setting_item_middle_line"
        android:layout_below="@id/rl_same_period"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_select_period"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dividing_line_2"
        android:layout_margin="20dp"
        android:background="#f5950d"
        android:text="确定"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
</RelativeLayout>
